{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2015",
		"outDir": "lib",
		"lib": ["esnext"],
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"strictFunctionTypes": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
	},
	"exclude": [
		"node_modules",
    "test",
	]
}